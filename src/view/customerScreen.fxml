<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="600.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CustomerScreen">
   <children>
      <TableView layoutX="75.0" layoutY="75.0" prefHeight="450.0" prefWidth="1060.0">
         <columns>
            <TableColumn fx:id="customerId_column" prefWidth="100.0" text="Customer ID" />
            <TableColumn fx:id="customerName_column" prefWidth="120.0" text="Customer Name" />
            <TableColumn fx:id="address_column" prefWidth="120.0" text="Address" />
            <TableColumn fx:id="postalCode_column" prefWidth="90.0" text="Postal Code" />
            <TableColumn fx:id="phone_column" prefWidth="120.0" text="Phone Number" />
            <TableColumn fx:id="dateCreated_column" prefWidth="90.0" text="Date Created" />
            <TableColumn fx:id="createdBy_column" prefWidth="90.0" text="Created By" />
            <TableColumn fx:id="lastUpdate_column" prefWidth="90.0" text="Last Update" />
            <TableColumn fx:id="lastUpdatedBy_column" prefWidth="120.0" text="Last Updated By" />
            <TableColumn fx:id="state_column" prefWidth="120.0" text="State/Province" />
         </columns>
      </TableView>
      <SplitMenuButton fx:id="viewBySplit" layoutX="75.0" layoutY="44.0" mnemonicParsing="false" text="View By...">
         <items>
            <MenuItem mnemonicParsing="false" onAction="#splitmenuWeek" text="Week" />
            <MenuItem mnemonicParsing="false" onAction="#splitMenuMonth" text="Month" />
            <MenuItem mnemonicParsing="false" onAction="#splitMenuAll" text="All" />
         </items>
      </SplitMenuButton>
      <Button fx:id="reportsBtn" layoutX="275.0" layoutY="9.0" mnemonicParsing="false" onAction="#reportsBtnAction" prefHeight="30.0" prefWidth="90.0" text="Reports" />
      <Button fx:id="exitCustomerBtn" layoutX="1080.0" layoutY="536.0" mnemonicParsing="false" onAction="#exitBtnAction" prefHeight="45.0" prefWidth="55.0" text="Exit" />
      <Label fx:id="timeZoneLabel" layoutX="1013.0" layoutY="14.0" text="Time Zone Placeholder" />
      <Label layoutX="9.0" layoutY="14.0" text="Customer" />
      <Button fx:id="appointmentsBtn" layoutX="389.0" layoutY="9.0" mnemonicParsing="false" onAction="#appointmentsBtnAction" prefHeight="30.0" prefWidth="100.0" text="Appointments" />
      <GridPane hgap="100.0" layoutX="175.0" layoutY="506.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="45.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Button fx:id="addCustomerBtn" mnemonicParsing="false" onAction="#addBtnAction" prefHeight="40.0" text="Add Customer" GridPane.rowIndex="1" />
            <Button fx:id="updateCustomerBtn" mnemonicParsing="false" onAction="#updateBtnAction" prefHeight="40.0" text="Update Customer" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button fx:id="deleteCustomerBtn" mnemonicParsing="false" onAction="#deleteBtnAction" prefHeight="40.0" text="Delete Customer" GridPane.columnIndex="2" GridPane.rowIndex="1" />
         </children>
      </GridPane>
   </children>
</AnchorPane>
