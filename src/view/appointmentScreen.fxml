            <Button fx:id="deleteAppointmentBtn" mnemonicParsing="false" onAction="#deleteBtnAction" prefHeight="40.0" prefWidth="124.0" text="Delete Appointment" GridPane.columnIndex="2" GridPane.rowIndex="1" />
