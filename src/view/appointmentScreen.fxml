            <TableColumn fx:id="contact_column" prefWidth="75.0" text="Contact" />
            <TableColumn fx:id="type_column" prefWidth="75.0" text="Type" />
            <TableColumn fx:id="startTime_column" prefWidth="90.0" text="Start Time" />
            <TableColumn fx:id="endTime_column" prefWidth="90.0" text="End Time" />
            <TableColumn fx:id="startDate_column" prefWidth="90.0" text="Start Date" />
            <TableColumn fx:id="endDate_column" prefWidth="90.0" text="End Date" />
            <TableColumn fx:id="customerId_column" prefWidth="100.0" text="Customer ID" />
            <TableColumn fx:id="userId_column" prefWidth="100.0" text="User ID" />
        </columns>
      </TableView>
      <SplitMenuButton fx:id="viewBySplit" layoutX="75.0" layoutY="44.0" mnemonicParsing="false" text="View By...">
